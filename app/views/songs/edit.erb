<h1>Edit <%= @song.name %>:</h1>

<form class="" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

<h2>Artist:</h2>
  <input id="Artist Name" type="text" name="artist" value="<%= @song.artist.name %>">


<h2>Genres:</h2>
<% Genre.all.each do |genre| %>
<input <%= checked="checked" if @song.genres.include?(genre) %> id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><%= genre.name %>
<br>
<% end %>
  <input type="submit" name="submit" value="Save">

</form>
